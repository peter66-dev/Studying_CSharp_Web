@model IEnumerable<DataAccess.OrderDetail>

@{
    ViewData["Title"] = "Order management page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-capitalize text-info">ORDER DETAILS MANAGEMENT</h1>

<div class="mt-2 mb-2">
    <a asp-action="Create">Create a new order detail</a>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                Order ID
            </th>
            <th class="text-center">
                Product ID
            </th>
            <th class="text-center">
                Unit Price (VND)
            </th>
            <th class="text-center">
                Quantity
            </th>
            <th class="text-center">
                Discount (%)
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId, proID = item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId, proID = item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId, proID = item.ProductId })
                </td>
            </tr>
        }
    </tbody>
</table>
