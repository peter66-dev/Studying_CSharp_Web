@model IEnumerable<DataAccess.Member>

@{
    ViewData["Title"] = "Member page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center text-capitalize text-info">@ViewBag.Message</h1>
<h1 class="text-center text-capitalize text-info">MEMBER MANAGEMENT</h1>
<div class="mt-2 mb-2">
    <a asp-action="Create">Add a new member</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                Member ID
            </th>
            <th class="text-center">
                Email
            </th>
            <th class="text-center">
                Company Name
            </th>
            <th class="text-center">
                City
            </th>
            <th class="text-center">
                Country
            </th>
            <th class="text-center">
                Password
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.MemberId)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MemberId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
                </td>
            </tr>
        }
    </tbody>
</table>
