@model IEnumerable<DataAccess.Product>

@{
    ViewData["Title"] = "Product page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center text-capitalize text-info">@ViewBag.Message</h1>
<h1 class="text-center text-capitalize text-info">PRODUCT MANAGEMENT</h1>

<div class="mt-2 mb-2">
    <a asp-action="Create">Add a new product</a>
</div>

<div class="d-flex justify-content-around mt-3 mb-3">
    <a asp-action="Sortasc" asp-controller="Products" class="btn btn-primary">Sort ascending by quantity</a>
    <a asp-action="Sortdesc" asp-controller="Products" class="btn btn-primary">Sort descending by quantity</a>
</div>
<form asp-action="Search" asp-controller="Products" class="mb-3">
    <div class="input-group">
        <input type="search" class="form-control rounded" placeholder="Product name ..." aria-label="Search"
               name="valueInput" aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary">search</button>
    </div>
</form>

<form asp-action="FindPrice" asp-controller="Products" class="mb-3">
    <div class="input-group">
        <select id="combobox" name="valuePrice" class="browser-default custom-select">
            <option value="1">1000 - 10.000 VND</option>
            <option value="2">10.000 -50.000 VND</option>
            <option value="3">50.000 - 100.000 VND</option>
            <option value="4">Above 100.000 VND</option>
        </select>
        <button type="submit" class="btn btn-outline-primary">Find</button>
    </div>
</form>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                Product ID
            </th>
            <th class="text-center">
                Category ID
            </th>
            <th class="text-center">
                Product Name
            </th>
            <th class="text-center">
                Weight
            </th>
            <th class="text-center">
                Unit Price
            </th>
            <th class="text-center">
                Quantity
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }
    </tbody>
</table>
