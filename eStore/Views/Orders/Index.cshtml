@model IEnumerable<DataAccess.Order>

@{
    ViewData["Title"] = "Order page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center text-info">ORDER MANAGEMENT</h1>
<div class="mt-2 mb-2">
    <a asp-action="Create">Create a new order</a>
</div>
<h1 class="text-center text-danger">@ViewBag.Message</h1>

<p>Total: <span>@ViewBag.Total</span> VND</p>

<div class="d-flex justify-content-around mt-3 mb-3">
    <a asp-action="Sortasc" asp-controller="Orders" class="btn btn-primary">Sort ascending by Order Date</a>
    <a asp-action="Sortdesc" asp-controller="Orders" class="btn btn-primary">Sort descending by Order Date</a>
</div>

<form asp-action="Statistic" asp-controller="Orders" class="mt-3 mb-3">
    <div class="input-group">
        <input type="text" class="form-control rounded" placeholder="Start day: 1, 2, 3..."
               name="startDay" />
        <input type="text" class="form-control rounded" placeholder="End day: 28, 29, 30..."
               name="endDay" />
        <button type="submit" class="btn btn-outline-primary">Statistic</button>
    </div>
</form>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                Order ID
            </th>
            <th>
                Member ID
            </th>
            <th class="text-center">
                Freight (VND)
            </th>
            <th class="text-center">
                Order Date
            </th>
            <th class="text-center">
                Required Date
            </th>
            <th class="text-center">
                Shipped Date
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.MemberId)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Freight)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
                </td>
            </tr>
        }
    </tbody>
</table>

